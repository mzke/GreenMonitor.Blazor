<div class="medidor-borda" style="display: flex">
    <div style="margin-left: 10px;"><i class="fas @Icone" style="font-size: 28px;"></i></div>
    <div>
        <div class="medidor-titulo">@Titulo</div>
        <div class="medidor-valor">@Value @Unidade</div>
    </div>
</div>

@code{
    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public string Unidade { get; set; }

    [Parameter]
    public string Icone { get; set; }

    [Parameter]
    public string Titulo { get; set; }
}