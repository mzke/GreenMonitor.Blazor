<div class="container">
    <div class="row">
        <div class="col-10">
            <div class="progress" style="height:30px">
                <div class="progress-bar" role="progressbar" style="width: @Largura%;"  aria-valuenow="@Watts" 
                aria-valuemin="0" aria-valuemax="@Maximo">@Watts W</div>
                </div>
        </div>
        <div class="col align-middle" style="background-color: red;">@Maximo W</div>
    </div>
</div>

@code{
    private double Maximo{ get; set; } = 1;
    private int Largura{ get; set; }
    private double _watts;

    [Parameter]
    public double Watts{
        get{ return _watts; }
        set{
            _watts = Math.Round(value);
            if (_watts > Maximo)
                Maximo = _watts;
            Largura = Convert.ToInt32(_watts * 100 / Maximo);
            
        }
    }
}